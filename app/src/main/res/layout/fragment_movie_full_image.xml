<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.KINODATA.FullscreenContainer"
    tools:context=".fragments.image.MovieFullImageFragment"
    android:background="@color/light_black">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tb_fullImg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/super_light_black"
        app:navigationIcon="@drawable/ic_arrow_left_light"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tb_fullImg"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>